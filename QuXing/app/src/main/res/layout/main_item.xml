<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bg_collection" /><!--贴合X边，贴合Y边--><!--不保持长宽比（图片可能变形）-->

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/item_image"
        android:text="123"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_image"
        android:layout_alignStart="@+id/item_date"
        android:text="杭州·滨江"
        android:textColor="@color/grey"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_address"
        android:layout_alignStart="@+id/item_name"
        android:text="2017/4/30"
        android:textColor="@color/grey"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/item_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:text="¥"
        android:textColor="@color/blue"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_image"
        android:layout_alignLeft="@id/item_rmb"
        android:layout_marginLeft="8dp"
        android:text="50"
        android:textColor="@color/blue"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey" />

</RelativeLayout>
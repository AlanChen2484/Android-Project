<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.quxing.quxing.Wode.Wode_AccountsActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_accounts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/toolbar_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="账户设置"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </android.support.v7.widget.Toolbar>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/label_bg_shap"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="本地账户"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/phone_set"
                    style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="手机号" />

                    <TextView
                        android:id="@+id/phone_text"
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_set"
                    style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="邮箱" />

                    <TextView
                        android:id="@+id/email_text"
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password_set"
                    style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="密码" />

                    <TextView
                        android:id="@+id/password_text"
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@drawable/label_bg_shap"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="关联账户"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/qq_set"
                    style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="QQ" />

                    <TextView
                        android:id="@+id/qq_text"
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>

                <LinearLayout style="@style/label_bg_single_layout"
                    android:id="@+id/wechat_set">

                    <TextView
                        style="@style/set_left_text"
                        android:text="微信" />

                    <TextView
                        android:id="@+id/wechat_text"
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>

                <LinearLayout style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="豆瓣" />

                    <TextView
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>
                <LinearLayout style="@style/label_bg_single_layout">

                    <TextView
                        style="@style/set_left_text"
                        android:text="新浪微博" />

                    <TextView
                        style="@style/set_right_text"
                        android:hint="未绑定" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

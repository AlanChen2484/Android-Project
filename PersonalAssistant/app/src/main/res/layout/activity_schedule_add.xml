<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context="chen.zucc.com.personalassistant.Schedule.ScheduleAddActivity">
    <EditText
        android:maxLength="20"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:hint="日程描述"
        android:textColorHint="#cfd8dc"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/editText_1"
        android:background="#1e88e5"/>

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/linear_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/editText_1"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/imageBtn_schedule"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@mipmap/schedule" />

        <TextView
            android:text="2017-01-01"
            android:id="@+id/textView_schedule"
            android:layout_marginTop="24dp"
            android:paddingTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <ImageButton
        android:id="@+id/imageBtn_time"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@mipmap/time" />

        <TextView
            android:text="23:00"
            android:id="@+id/textView_time"
            android:layout_marginTop="24dp"
            android:paddingTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_below="@+id/linear_1"
        android:layout_alignParentStart="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b0bec5"
    />
        <TextView
            android:background="#ffffff"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="优先级"
            android:textSize="20sp" />

        <RadioGroup
            android:background="#ffffff"
            android:id="@+id/radioGroup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/dotNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/php"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低" />



        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0bec5"
            />
        <TextView
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/radioGroup"
            android:text="类别" />

        <RadioGroup
            android:background="#ffffff"
            android:id="@+id/radioGroup3"
            android:orientation="horizontal"
            android:layout_below="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="48dp" >

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/radioButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="工作" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/radioButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="生活" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/radioButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="娱乐" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/radioButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="健康" />

            <RadioButton
                android:layout_marginLeft="16dp"
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="其他" />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b0bec5"
            />
    </LinearLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <Button
        android:background="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/button_1"/>
    <Button
        android:background="#ffffff"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:id="@+id/button_2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />
    </RelativeLayout>
</RelativeLayout>
